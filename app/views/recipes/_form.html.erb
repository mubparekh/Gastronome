<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name, 'Recipe Name' %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 4 %>
  </p>

  <p>
    <%= f.label :serving_size %>
    <%= f.text_field :serving_size %>
  </p>

  <p>
    <%= f.label :cooking_time %>
    <%= f.text_field :cooking_time %>
  </p>

  <p>
    <%= f.label :ingredient_list, raw('Ingredients <span class="label-small">(Comma Separated)</span>') %>
    <%= f.text_area :ingredient_list, rows: 4 %>
  </p>

  <p>
    <%= f.label :cuisine_type, 'Cuisine' %>
    <%= f.select :cuisine_type, Recipe.get_cuisine %>
  </p>

  <p>
    <%= f.label :directions %>
    <%= f.text_area :directions, rows: 4 %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
